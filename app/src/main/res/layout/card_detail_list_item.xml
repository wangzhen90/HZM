<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@null"
    >


  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:cardCornerRadius="5dp"
      app:cardElevation="5dp"
      app:contentPadding="1dp"
      android:background="#ffffff"
      android:layout_margin="10dp"

      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/start_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="开阀时间：2015-12-01 14:34 (剩余水量：10000m^3)"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          />

        <TextView
            android:id="@+id/start_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开阀时间：2015-12-01 14:34 (剩余水量：10000m^3)"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

      <TextView
          android:id="@+id/end_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="闭阀时间：2015-12-01 14:34 (剩余水量：10000m^3)"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          />

        <TextView
            android:id="@+id/end_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开阀时间：2015-12-01 14:34 (剩余水量：10000m^3)"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

      <TextView
          android:id="@+id/use_water"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="总计耗水量： 57m^3"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          />

      <TextView
          android:id="@+id/well_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="使用机井：彩虹桥地下室（0994010101001）"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:paddingBottom="10dp"
          />
    </LinearLayout>
  </android.support.v7.widget.CardView>
</FrameLayout>